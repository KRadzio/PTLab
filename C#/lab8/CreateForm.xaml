<Window x:Class="lab8.CreateForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="CreateForm" Height="281" Width="309">
    <Grid Margin="0,0,-8,-6">
        <Label x:Name="labelName" Content="Name:" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textName" HorizontalAlignment="Left" Height="26" Margin="84,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="156"/>
        <RadioButton x:Name="radioFile" Content="File" HorizontalAlignment="Left" Margin="84,70,0,0" VerticalAlignment="Top" Width="66"/>
        <RadioButton x:Name="radioDirectory" Content="Directory" HorizontalAlignment="Left" Margin="165,70,0,0" VerticalAlignment="Top" Width="75"/>
        <CheckBox x:Name="checkR" Content="ReadOnly" HorizontalAlignment="Left" Margin="84,105,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkA" Content="Archive" HorizontalAlignment="Left" Margin="84,125,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkH" Content="Hidden" HorizontalAlignment="Left" Margin="84,145,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkS" Content="System" HorizontalAlignment="Left" Margin="84,165,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonOK" HorizontalAlignment="Left" Margin="84,205,0,0" VerticalAlignment="Top" Width="71" Height="25" Content="OK" Click="confirmClick"/>
        <Button x:Name="buttonCancel" HorizontalAlignment="Left" Margin="169,205,0,0" VerticalAlignment="Top" Width="71" Height="25" Content="Cancel
" Click="cancelClick"/>
    </Grid>
</Window>
