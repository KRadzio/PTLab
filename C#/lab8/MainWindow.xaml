<Window x:Class="lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar x:Name="ToolBar" Margin="0,0,725,0" VerticalAlignment="Top" Height="30" RenderTransformOrigin="0.5,0.5" Header="File">
            <Menu x:Name="menu" Height="50" VerticalAlignment="Top" Width="50">
                <MenuItem x:Name="Open" Header="Open" Margin="0" Click="openClick" />
                <MenuItem x:Name="Exit" Header="Exit" Margin="0" Click="exitClick"/>
            </Menu>
        </ToolBar>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="345" VerticalAlignment="Top" Width="452" Margin="0,35,0,0"/>
        <StatusBar x:Name="statusBar" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="795" Margin="0,380,0,0" RenderTransformOrigin="0.493,3.798">
            <TextBlock x:Name="status" TextWrapping="Wrap" Text="----" RenderTransformOrigin="1.256,0.457" Width="58"/>
        </StatusBar>
        <ScrollViewer x:Name="scrollViewer" HorizontalAlignment="Left" Height="340" Margin="452,35,0,0" VerticalAlignment="Top" Width="343"/>
    </Grid>
</Window>
